@model MoivestoreMvc.Models.DTO.MoiveListVm
@{

}
<section class="search-bar">
    <form>
        <input type="text" placeholder="search here">
        <button type="submit"><i class="fa fa-search"></i></button>
    </form>
</section>
<section class="Moives">
    @foreach(var movie in Model.MoiveList){
        <div class="Moive-card" onclick="window.location.href='/Home/MovieDetail?movieId=@movie.Id'">
        <div class="Moive-image">
            <img src="/Uploads/@movie.MovieImage">
        </div>
        <div class="Moive-info">
            <h4>@movie.Title</h4>
            <h4>@movie.GenreNames </h4>
                <h4>@movie.ReleaseYear</h4>
            
        </div>
    </div>
    }
   
</section>

